<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hz.fruit.master.core.mapper.MerchantDataMapper">




    <!-- 定义数据库基本列,只适用代替单表的*-->
    <sql id="Base_Column_List">
        a.id,a.bank_card,a.order_no,a.order_money,a.order_status,a.collection_time,a.replenish_type,a.is_matching,a.matching_info,
        a.remark,a.curday,a.curhour,a.curminute,a.run_num,a.run_status,
        a.create_time,a.update_time,a.yn
    </sql>

    <!-- 查询条件 -->
    <sql id="Example_Where_Clause">
        where 1=1
        <trim  suffixOverrides="," >
            <if test="id != null and id != '' " >
                and a.id = #{id}
            </if>
            <if test="bankCard != null and bankCard != '' " >
                and a.bank_card = #{bankCard}
            </if>
            <if test="orderNo != null and orderNo != '' " >
                and a.order_no = #{orderNo}
            </if>
            <if test="orderStatus != null and orderStatus != '' " >
                and a.order_status = #{orderStatus}
            </if>
            <if test="replenishType != null and replenishType != '' " >
                and a.replenish_type = #{replenishType}
            </if>
            <if test="isMatching != null and isMatching != '' " >
                and a.is_matching = #{isMatching}
            </if>
            and a.yn = 0
        </trim>
    </sql>


    <!-- 查询条件_id -->
    <sql id="Example_Where_Clause_id">
        where 1=1
        <trim  suffixOverrides="," >
            <if test="id != null and id != '' " >
                and a.id = #{id}
            </if>
            and a.yn =  0
        </trim>
    </sql>

    <!-- 排序条件 -->
    <sql id="Example_Order_By">
        order by a.create_time desc
    </sql>


    <!-- 显示所有数据 -->
    <select id="findAll" resultType="com.hz.fruit.master.core.model.merchant.MerchantDataModel">
        select
        <include refid="Base_Column_List" />
        from tb_fr_merchant_data a
        <include refid="Example_Where_Clause"/>
    </select>

    <!-- 查询列表 -->
    <select id="findByCondition" parameterType="Object" resultType="com.hz.fruit.master.core.model.merchant.MerchantDataModel">
        select
        <include refid="Base_Column_List" />
        from tb_fr_merchant_data a
        <include refid="Example_Where_Clause"/>
    </select>

    <!-- 根据条件查询信息-->
    <select id="findByObject" parameterType="Object" resultType="com.hz.fruit.master.core.model.merchant.MerchantDataModel">
        select
        <include refid="Base_Column_List" />
        from tb_fr_merchant_data a
        <include refid="Example_Where_Clause"/>
        limit 1
    </select>

    <!-- 根据id查询信息-->
    <select id="findById" parameterType="java.lang.Long" resultType="com.hz.fruit.master.core.model.merchant.MerchantDataModel">
        select
        <include refid="Base_Column_List" />
        from tb_fr_merchant_data a
        <include refid="Example_Where_Clause_id"/>
    </select>


    <!-- 查询总数-->
    <select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
        select count(1)
        from tb_fr_merchant_data a
        <include refid="Example_Where_Clause"/>
    </select>

    <!-- 查询分页列表 -->
    <select id="queryByList" parameterType="Object" resultType="com.hz.fruit.master.core.model.merchant.MerchantDataModel">
        select
        <include refid="Base_Column_List" />
        from tb_fr_merchant_data a
        <include refid="Example_Where_Clause"/>
        <include refid="Example_Order_By"/>
        <if test="pageNumber != null and pageNumber != ''" >
            limit #{start},#{end}
        </if>
    </select>


    <!-- 添加基本信息 -->
    <insert id="add" parameterType="com.hz.fruit.master.core.model.merchant.MerchantDataModel" >
        <!--<selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">-->
        <!--SELECT LAST_INSERT_ID() as id-->
        <!--</selectKey>-->
        insert into tb_fr_merchant_data
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="bankCard != null and bankCard != '' " >
                bank_card,
            </if>
            <if test="orderNo != null and orderNo != '' " >
                order_no,
            </if>
            <if test="orderMoney != null and orderMoney != '' " >
                order_money,
            </if>
            <if test="orderStatus != null and orderStatus != '' " >
                order_status,
            </if>
            <if test="collectionTime != null and collectionTime != '' " >
                collection_time,
            </if>
            <if test="replenishType != null and replenishType != '' " >
                replenish_type,
            </if>
            <if test="isMatching != null and isMatching != '' " >
                is_matching,
            </if>
            <if test="matchingInfo != null and matchingInfo != '' " >
                matching_info,
            </if>
            <if test="remark != null and remark != '' " >
                remark,
            </if>
            <if test="curday != null and curday != '' " >
                curday,
            </if>
            <if test="curhour != null and curhour != '' " >
                curhour,
            </if>
            <if test="curminute != null and curminute != '' " >
                curminute,
            </if>
            create_time,
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="bankCard != null and bankCard != '' " >
                <![CDATA[  #{bankCard}, ]]>
            </if>
            <if test="orderNo != null and orderNo != '' " >
                <![CDATA[  #{orderNo}, ]]>
            </if>
            <if test="orderMoney != null and orderMoney != '' " >
                <![CDATA[  #{orderMoney}, ]]>
            </if>
            <if test="orderStatus != null and orderStatus != '' " >
                <![CDATA[  #{orderStatus}, ]]>
            </if>
            <if test="collectionTime != null and collectionTime != '' " >
                <![CDATA[  #{collectionTime}, ]]>
            </if>
            <if test="replenishType != null and replenishType != '' " >
                <![CDATA[  #{replenish_type}, ]]>
            </if>
            <if test="isMatching != null and isMatching != '' " >
                <![CDATA[  #{isMatching}, ]]>
            </if>
            <if test="matchingInfo != null and matchingInfo != '' " >
                <![CDATA[  #{matchingInfo}, ]]>
            </if>
            <if test="remark != null and remark != '' " >
                <![CDATA[  #{remark}, ]]>
            </if>
            <if test="curday != null and curday != '' " >
                <![CDATA[  #{curday}, ]]>
            </if>
            <if test="curhour != null and curhour != '' " >
                <![CDATA[  #{curhour}, ]]>
            </if>
            <if test="curminute != null and curminute != '' " >
                <![CDATA[  #{curminute}, ]]>
            </if>
            NOW(),
        </trim>
    </insert>

    <!-- 更新基本信息 -->
    <update id="update" parameterType="com.hz.fruit.master.core.model.merchant.MerchantDataModel">
        UPDATE tb_fr_merchant_data a
        <trim prefix="set" suffixOverrides=",">
            <if test="bankCard != null and bankCard != '' " >
                a.bank_card = #{bankCard},
            </if>
            <if test="orderNo != null and orderNo != '' " >
                a.order_no = #{orderNo},
            </if>
            <if test="orderMoney != null and orderMoney != '' " >
                a.order_money = #{orderMoney},
            </if>
            <if test="orderStatus != null and orderStatus != '' " >
                a.order_status = #{orderStatus},
            </if>
            <if test="collectionTime != null and collectionTime != '' " >
                a.collection_time = #{collectionTime},
            </if>
            <if test="replenishType != null and replenishType != '' " >
                a.replenish_type = #{replenishType},
            </if>
            <if test="isMatching != null and isMatching != '' " >
                a.is_matching = #{isMatching},
            </if>
            <if test="matchingInfo != null and matchingInfo != '' " >
                a.matching_info = #{matchingInfo},
            </if>
            <if test="remark != null and remark != '' " >
                a.remark = #{remark},
            </if>
            a.update_time = NOW(),
        </trim>
        <include refid="Example_Where_Clause_id"/>
    </update>

    <!-- 主要作用1.逻辑删除，2更新状态 -->
    <update id="manyOperation" parameterType="Object">
        update tb_fr_merchant_data a
        <trim prefix="set" suffixOverrides=",">
            <if test="yn != 0 and yn >0 " >
                a.yn = #{yn},
            </if>
        </trim>
        <include refid="Example_Where_Clause_id"/>
    </update>



</mapper>