    <!-- 定义数据库基本列,只适用代替单表的*-->
    <sql id="Base_Column_List">
        a.id,a.binding_mobile,a.phone_num,a.bank_type_id,a.bank_name,a.bank_card,a.subbranch_name,a.account_name,
        a.in_day_money,a.out_day_money,a.balance,a.bank_code,a.province,a.city,a.remark,a.use_status,
        a.create_time,a.update_time,a.yn
